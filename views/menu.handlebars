<div class="row container">
    {{#each menuItems}}
        <div class="card" id='{{name}}' data-value={{price}}>
            <div class="row">
                <img class="center-align" src="/assets/{{ name }}.jpg">
            </div>
            <div class="row">
                <div class="item-label">
                    {{ name }} | ${{ price }}
                </div>
            </div>
            <div data-name="{{ name }}" class="row item-buttons">
                <button class="waves-effect waves-light btn-small blue add-cart">
                    Add to Cart
                </button>
                <button class="waves-effect waves-light btn-small orange add-favorite" id='{{name}}' value={{price}}>
                    Add Favorite
                </button>
            </div>
        </div>
    {{/each}}
</div>


<script src="/js/menu.js"></script>